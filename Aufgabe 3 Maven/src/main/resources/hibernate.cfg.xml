<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/dbprak</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">123</property>
        <property name="hibernate.show_sql">false</property>
        
        <mapping class="model.City"/>
        <mapping class="model.Company"/>
        <mapping class="model.Continent"/>
        <mapping class="model.Country"/>
        <mapping class="model.Organization"/>
        <mapping class="model.Person"/>
        <mapping class="model.Place"/>
        <mapping class="model.University"/>
        <!--
        <mapping class="model.studyAt"/>
        <mapping class="model.workAt"/>
        -->
    </session-factory>
</hibernate-configuration>